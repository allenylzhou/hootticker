{
	"manifest_version": 2,

	"name": "Hootticker",
	"description": "This extension builds a master stream using HootSuite.",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png"
	},
	"permissions": [
		"tabs"
	],
	"background": {
		"scripts": [
			"background.js",
			"chrome_ex_oauthsimple.js",
			"chrome_ex_oauth.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"css": [
				"ticker.css"
			],
			"js": [
				"jquery.js",
				"ticker.js"
			]
		}
	]
}
